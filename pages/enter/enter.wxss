@keyframes myfirst {
  0% {
    background: rgb(46, 41, 41);
  }

  15% {
    background: rgb(62, 32, 102);
  }

  40% {
    background: rgb(100, 100, 187);
  }

  70% {
    background: green;
  }

  100% {
    background: rgb(24, 8, 8);
  }
}
